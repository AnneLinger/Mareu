<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarAddTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="ActionBar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>
    <style name="ItemRecyclerView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    </style>
    <style name="HelperText" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>